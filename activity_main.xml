<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter The Number"
        android:inputType="number"
        android:text=""
        android:textAlignment="center"
        android:textColor="#1bf301"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColorHint="#1bf301"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="269dp"
        android:layout_height="130dp"
        android:layout_marginBottom="168dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#8D16F4"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gtokg"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/kgtopound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:backgroundTint="#1bf301"
        android:text="Kg to Pounds"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/gtokg"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="282dp"
        android:layout_height="84dp"
        android:text="UNIT CONVERTER"
        android:textColor="#8D16F4"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.651"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.535" />

    <Button
        android:id="@+id/gtokg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#8D16F4"
        android:text="Kg To G"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/poundtokg"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2"
        tools:ignore="ExtraText" />

    <Button
        android:id="@+id/poundtokg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#1bf301"
        android:text="Pound To Kg"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2" />

    <Button
        android:id="@+id/mtocm"
        android:layout_width="112dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#8D16F4"
        android:text="M To Cm"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/Cmtom"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kgtopound"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Cmtom"
        android:layout_width="111dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#1bf301"
        android:text="Cm To M"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/cmtoinch"
        app:layout_constraintTop_toBottomOf="@+id/gtokg"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/cmtoinch"
        android:layout_width="123dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#8D16F4"
        android:text="Cm To Inch"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poundtokg"
        app:layout_constraintVertical_bias="0.022" />

</androidx.constraintlayout.widget.ConstraintLayout>