<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/inchtom"
        android:layout_width="117dp"
        android:layout_height="53dp"
        android:layout_marginBottom="260dp"
        android:backgroundTint="#1bf301"
        android:text="Inch To M"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/poundtokg"
        app:layout_constraintStart_toStartOf="@+id/inchtocm"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/mtoinch"
        android:layout_width="115dp"
        android:layout_height="53dp"
        android:backgroundTint="#8D16F4"
        android:text="M To Inch"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Cmtom"
        app:layout_constraintStart_toStartOf="@+id/cmtoinch"
        app:layout_constraintTop_toBottomOf="@+id/inchtom"
        app:layout_constraintVertical_bias="0.106" />

    <Button
        android:id="@+id/inchtocm"
        android:layout_width="115dp"
        android:layout_height="53dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#1bf301"
        android:text="Inch To Cm"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/cmtoinch"
        app:layout_constraintEnd_toStartOf="@+id/mtocm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/gtokg"
        android:layout_width="115dp"
        android:layout_height="53dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#8D16F4"
        android:text="G To Kg"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/poundtokg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter The Number"
        android:inputType="number"
        android:text=""
        android:textAlignment="center"
        android:textColor="#1bf301"
        android:textColorHint="#1bf301"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.231" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="269dp"
        android:layout_height="130dp"
        android:layout_marginBottom="32dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#8D16F4"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mtoinch"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/kgtopound"
        android:layout_width="117dp"
        android:layout_height="53dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#1bf301"
        android:text="Kg to Pounds"
        android:textColor="#000000"
        android:textSize="12.5sp"
        app:layout_constraintBottom_toTopOf="@+id/mtocm"
        app:layout_constraintEnd_toEndOf="@+id/editTextText2"
        app:layout_constraintStart_toStartOf="@+id/editTextText2"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="282dp"
        android:layout_height="84dp"
        android:text="UNIT CONVERTER"
        android:textAlignment="center"
        android:textColor="#8D16F4"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.219" />

    <Button
        android:id="@+id/kgtog"
        android:layout_width="115dp"
        android:layout_height="53dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#8D16F4"
        android:text="Kg To G"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/inchtocm"
        app:layout_constraintEnd_toStartOf="@+id/kgtopound"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="ExtraText" />

    <Button
        android:id="@+id/poundtokg"
        android:layout_width="115dp"
        android:layout_height="53dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#1bf301"
        android:text="Pound To Kg"
        android:textColor="#000000"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/Cmtom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/kgtog"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/mtocm"
        android:layout_width="117dp"
        android:layout_height="53dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#8D16F4"
        android:text="M To Cm"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/inchtom"
        app:layout_constraintEnd_toEndOf="@+id/gtokg"
        app:layout_constraintStart_toStartOf="@+id/kgtog"
        app:layout_constraintTop_toTopOf="@+id/gtokg"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/Cmtom"
        android:layout_width="115dp"
        android:layout_height="53dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="260dp"
        android:backgroundTint="#8D16F4"
        android:text="Cm To M"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/cmtoinch"
        android:layout_width="115dp"
        android:layout_height="53dp"
        android:layout_marginBottom="260dp"
        android:backgroundTint="#8D16F4"
        android:text="Cm To Inch"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/inchtom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
